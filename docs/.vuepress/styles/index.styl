// Theme overrides
hr
  margin 40px 0

h2 small
  font-size .65em
  opacity 0.5

iframe
  width 100%

.home header.hero .description
  max-width 40rem

.features.padless > div
  flex-basis 33%
  max-width 33%

  @media screen and (max-width: 820px)
    flex-basis 100%
    max-width 100%

main .footer
  margin-top 100px

// Forms
form
  margin 40px 0

.input-button-pair
  position relative
  width 100%

  input
    width 100%
    cursor text
    height 2rem
    color #4e6e8e
    display inline-block
    border 1px solid #cfd4db
    font-size .9rem
    line-height 2rem
    padding 0 .5rem 0 2rem
    outline none
    transition all .2s ease
    cursor auto
    border-radius 2em
    box-sizing border-box

    &:focus, &:focus + button
      border-color $accentColor

  button
    box-sizing border-box
    position absolute
    right 0
    top 0
    width 100px
    height 100%
    border-top-right-radius 2em
    border-bottom-right-radius 2em
    border 1px solid $accentColor
    border-left none
    cursor pointer
    background $accentColor
    color #fff
    font-weight bold

.button, button
  display inline-block
  border none
  cursor pointer
  font-size 1.2rem
  color #fff
  background-color $accentColor
  padding 0.8rem 1.6rem
  border-radius 4px
  -webkit-transition background-color 0.1s ease
  transition background-color 0.1s ease
  box-sizing border-box
  border-bottom 1px solid darken($accentColor, 15%)
  text-decoration none !important

  &[disabled]
    background-color lighten($accentColor, 50%)
    border-bottom 1px solid lighten($accentColor, 35%)
    cursor no-drop
    &:hover
      background-color lighten($accentColor, 50%)

  &:hover
    background lighten($accentColor, 15%)

// Columns
.columns
  display flex
  flex-wrap wrap

  .column
    box-sizing border-box
    flex 0 50%
    padding 20px

    &:nth-child(2n-1)
      padding-left 0
    &:nth-child(2n)
      padding-right 0

    @media screen and (max-width: 820px)
      flex 0 100%
      padding 20px 0

  h2
    font-size 1.4rem
    font-weight 500
    border-bottom none
    padding-bottom 0

// Cards
.card
  background $accentColor
  padding 1em
  margin 40px 0
  color #fff
  border-radius 3px
  box-shadow 1px 1px 3px rgba(0,0,0,0.35)

  a
    color $accentSecondary
  
  button
    background darken($accentColor, 20%)
    border-color darken($accentColor, 20%)
    font-size .9em
    padding 0

  input
    border-color darken($accentColor, 20%)

    &:focus, &:focus + button
      border-color darken($accentColor, 30%)

// Handsfree
.handsfree-show-when-started
  display none
.handsfree-show-when-loading
  display none

.handsfree-loading
  .handsfree-show-when-stopped
    display none
  .handsfree-show-when-loading
    display initial

.handsfree-started
  .handsfree-show-when-stopped
    display none
  .handsfree-show-when-started
    display initial
  .handsfree-show-when-stopped-or-loading
    display none

// Helpers
.text-center
  text-align center
.text-left
  text-align left

.mr-1
  margin-right 5px
.mr-2
  margin-right 10px
.mr-3
  margin-right 15px

// Misc
.twitter-tweet
  width 100% !important