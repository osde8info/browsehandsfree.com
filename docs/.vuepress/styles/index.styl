// Theme overrides
body .search-box input
  width 250px

hr
  margin 40px 0

.home header.hero .description
  max-width 40rem

// Forms
form
  margin 40px 0

.input-button-pair
  position relative
  width 100%

  input
    width 100%
    cursor text
    height 2rem
    color #4e6e8e
    display inline-block
    border 1px solid #cfd4db
    font-size .9rem
    line-height 2rem
    padding 0 .5rem 0 2rem
    outline none
    transition all .2s ease
    cursor auto
    border-radius 2em
    box-sizing border-box

    &:focus, &:focus + button
      border-color $accentColor

  button
    box-sizing border-box
    position absolute
    right 0
    top 0
    width 100px
    height 100%
    border-top-right-radius 2em
    border-bottom-right-radius 2em
    border 1px solid $accentColor
    border-left none
    cursor pointer
    background $accentColor
    color #fff
    font-weight bold

// Cards
.card
  background $accentColor
  padding 1em
  margin 40px 0
  color #fff
  border-radius 3px
  box-shadow 1px 1px 3px rgba(0,0,0,0.35)

  button
    background darken($accentColor, 20%)
    border-color darken($accentColor, 20%)

  input
    border-color darken($accentColor, 20%)

    &:focus, &:focus + button
      border-color darken($accentColor, 30%)